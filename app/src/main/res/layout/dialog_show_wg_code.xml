<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lbl_wg_code_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_wg_code_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toEndOf="@id/lbl_wg_code_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_wg_code_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="20dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toEndOf="@id/lbl_wg_code_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_wg_code_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toEndOf="@id/lbl_wg_code_3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_wg_code_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toEndOf="@id/lbl_wg_code_4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_wg_code_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="60dp"
            app:layout_constraintStart_toEndOf="@id/lbl_wg_code_5"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>